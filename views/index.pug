extends layout

block content
  //Check for any articles being passed in from the server
  if (users && users.length)
    table
        thead
            th Name
            th Description
            th Image
            th Update
            th Delete
        tbody
            //If there is articles, create a row and column for each article
            each result in users
                tr
                    td= result.name
                    td= result.description
                    td
                        img(src='/public/images/'+ result.image)
                    td 
                        a(href='/update/'+ result.id) Update
                    td
                        form.deleteForm(id=result.id)
                            button(type='submit') Delete
  else
    h1 No Posts Yet!
    a(href='/insert') Insert Ad
  script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
  script(src='/javascripts/delete.js')